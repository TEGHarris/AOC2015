{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es2020",
        "jsx": "react-jsx",
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strict": true,
        "sourceMap": true,
        "types": ["node"],
        "lib": ["es2020"]
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}